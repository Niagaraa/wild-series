{% extends 'base.html.twig' %}
{% block title %}{{ category.name }}{% endblock %}

{% block body %}

    <div class="media">
        {% for program in programs %}
            <div class="container">
                <h1>{{ program.id }}. {{ program.title }} </h1>
                <p>{{ program.summary }}</p>
            </div>
        {% else %}
            Aucune série pour cette catégorie.
        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}