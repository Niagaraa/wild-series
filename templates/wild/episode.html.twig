{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ program.title }}</h1>
        <h2>Saison {{ season.number }}, Episode {{ episode.number }}</h2>

        <div class="card">
            <div class="card-body">
                <h3>{{ episode.title }}</h3>
                <p>{{ episode.synopsis }}</p>
            </div>
        </div>

        <a href="" class="btn" role="button">Voir toutes les saisons de {{ program.title }}</a>
        <a href="" class="btn" role="button">Voir la fiche de {{ program.title }}</a>
    </div>

{% endblock %}