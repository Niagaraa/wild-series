{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="program">
        <div class="container">
            <div class="pic">
                <img src="{{ program.poster }}" alt="Affiche de {{ program.title }}" class="poster">
                <a class="btn" href="{{ path('wild_index') }}">
                    Retour à l'accueil
                </a>
            </div>

            <div class="content">
                <h1>{{ program.title }}</h1>
                <hr>
                {{ program.summary }}
                {% for season in seasons %}
                    <div class="seasons">
                        <a class="btn" role="button"
                           href="{{ path('show_season', {'id': season.id }) }}">Saison {{ season.number }}</a>
                    </div>
                {% endfor %}

                <strong>Acteur :</strong>
                <ul>
                    {% for actor in program.actors %}
                        <li><a href="{{ path('actor_show', {'id':actor.id}) }}">{{ actor.name }}</a> </li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>

            </div>
        </div>
    </div>
{% endblock %}

