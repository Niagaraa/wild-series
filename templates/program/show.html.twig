{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <h1>{{ program.title }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ program.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ program.title }}</td>
        </tr>
        <tr>
            <th>Résumé</th>
            <td>{{ program.summary }}</td>
        </tr>
        <tr>
            <th>Affiche</th>
            <td><img src="{{ program.poster }}" alt="" class="poster"></td>
        </tr>
        <tr>
            <th>Acteurs</th>
            <td>
                <ul>
                    {% for actor in program.actors %}
                        <li><a href="{{ path('actor_show', {'slug':actor.slug}) }}">{{ actor.name }}</a></li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>

        </tbody>
    </table>

    <a href="{{ path('program_index') }}" class="btn">Retour</a>

    <a href="{{ path('program_edit', {'slug': program.slug }) }}" class="btn">Modifier</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
