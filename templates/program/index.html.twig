{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Affiche</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td><img src="{{ program.poster }}" class="poster" alt=""></td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td>
                    <a href="{{ path('program_show', {'slug': program.slug }) }}">show</a>
                    <a href="{{ path('program_edit', {'slug': program.slug }) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('program_new') }}" class="btn">Ajouter une série</a>
{% endblock %}
