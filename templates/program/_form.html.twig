<div class="container program-admin">
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{ form_start(form) }}
    <div class="label-form">{{ form_label(form.title) }}</div>
    {{ form_errors(form.title) }}
    {{ form_widget(form.title) }}
    <div class="label-form">{{ form_label(form.summary) }}</div>
    {{ form_errors(form.summary) }}
    {{ form_widget(form.summary) }}
    <div class="label-form">{{ form_label(form.poster) }}</div>
    {{ form_errors(form.poster) }}
    {{ form_widget(form.poster) }}
    <div class="label-form">{{ form_label(form.poster2) }}</div>
    {{ form_widget(form.poster2) }}
    <div class="label-form">{{ form_label(form.category) }}</div>
    {{ form_widget(form.category) }}
    <div class="label-form">{{ form_label(form.actors) }}</div>
    <div class="casting">
        {{ form_widget(form.actors) }}
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary m-5">
            <i class="fas fa-save mr-2"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div>
    {{ form_end(form) }}
</div>
