{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Episode n°</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}" class="btn">Retour à la liste des épisiodes</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}" class="btn">Modifier</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
