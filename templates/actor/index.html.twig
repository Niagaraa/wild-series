{% extends 'base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
    <h1>Tous les acteurs</h1>

    <a href="{{ path('actor_new') }}" class="btn btn-primary">Ajouter un acteur</a>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ actor.name }}</td>
                <td>
                    <a href="{{ path('actor_show', {'slug': actor.slug}) }}" class="btn btn-primary">DÃ©tails</a>
                    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun acteur dans la liste</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
