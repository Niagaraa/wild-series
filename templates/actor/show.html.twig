{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}

    <div class="container">
        <h1>{{ actor.name }}</h1>
        <p>A joué dans :</p>

        <div class="programs">

            {% for program in programs %}
                <a class="card" href="{{ path('program_show', {'slug': program.slug }) }}"
                   style="width: 18rem;">
                    <img src="{{ program.poster }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h2>{{ program.title }}</h2>
                    </div>
                </a>
            {% endfor %}

        </div>
    </div>

    <a href="{{ path('actor_index') }}" class="btn">Retour à la liste des acteurs</a>

    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}" class="btn">Modifier</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}