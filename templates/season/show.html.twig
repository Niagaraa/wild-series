{% extends 'base.html.twig' %}

{% block title %}Saison{% endblock %}

{% block body %}
    <h1>Saison</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            <tr>
                <th>Saison n°</th>
                <td>{{ season.number }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}" class="btn">Retour</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}" class="btn">Modifier</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
